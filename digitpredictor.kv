<RootWindow>:
    paint_widget: paint_widget
    prediction_label: prediction_label

    rows: 2

    BoxLayout:
        height: 100
        size_hint: 1, 3
        PaintWidget:
            id: paint_widget

    BoxLayout:
        # Make the background white
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        padding: 10
        spacing: 10
        orientation: "vertical"

        BoxLayout:
            Button:
                text: "Clear"
                on_release: root.clear_canvas()

            Button:
                text: "Predict"
                on_release: root.predict_digit()

        Label:
            id: prediction_label
            text: "Prediction:"
            color: 0, 0, 0
            font_size: 30
